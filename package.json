{
  "name": "opencart-intellisense",
  "displayName": "OpenCart Intellisense",
  "description": "Provides intellisense for OpenCart files",
  "publisher": "iabhitech",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "OpenCart Intellisense",
      "properties": {
        "opencartIntellisense.basePath": {
          "type": "string",
          "default": "catalog",
          "description": "Base path for the OpenCart application (e.g., catalog, admin)"
        },
        "opencartIntellisense.paths": {
          "type": "object",
          "default": {
            "admin": "admin",
            "catalog": "catalog",
            "system": "system"
          },
          "description": "Custom paths for OpenCart directories"
        }
      }
    },
    "languages": [
      {
        "id": "php",
        "extensions": [
          ".php"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "make": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.85.0",
    "typescript": "^4.9.5"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "homepage": "https://github.com/iabhitech-org/opencart-intellisense",
  "bugs": {
    "url": "https://github.com/iabhitech-org/opencart-intellisense/issues",
    "email": "contact@iabhitech.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iabhitech-org/opencart-intellisense.git"
  }
}
